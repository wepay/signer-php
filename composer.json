{
    "name": "wepay/signer",
    "description": "Cryptographically sign WePay data to prevent tampering.",
    "keywords": ["crypto","signing","sha256"],
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Ryan Parman",
            "homepage": "http://ryanparman.com"
        },
        {
            "name": "Michael Dowling",
            "homepage": "http://mtdowling.com"
        },
        {
            "name": "Jeremy Lindblom",
            "homepage": "http://www.webjeremy.com"
        }
    ],
    "support": {
        "issues": "https://github.com/wepay/signer-php/issues"
    },
    "require": {
        "php": ">=5.4.0",
        "skyzyx/signer": "^1.0"
    },
    "require-dev": {
        "codeclimate/php-test-reporter": "*@dev",
        "phpunit/phpcov": "^2.0|^3.0",
        "phpunit/phpunit": "^4.3|^5.0",
        "sami/sami": "3.*",
        "satooshi/php-coveralls": "*@dev"
    },
    "config": {
        "bin-dir": "bin/"
    },
    "autoload": {
        "psr-4": {
            "WePay\\Signer\\": "src/Signer/",
            "WePay\\Tests\\Signer\\": "tests/Signer/"
        }
    }
}
